<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
  </head>
  <body>
    <h1>URL Shortener</h1>

    <div>
      <form method="post" action="/url">
        <label>Enter your URL to be shortened</label>
        <input type="text" name="url" placeholder="Enter your URL" />
        <button type="submit">Generate</button>
      </form>
    </div>
    <% if (locals.id) { %>
    <p>Shortened URL: http://localhost:8001/url/<%= id %></p>
    <% } %>
    <div>
      <% if (locals.urls) { %>
      <table>
        <thead>
          <th>S. No.</th>
          <th>Original URL</th>
          <th>Shortened URL</th>
          <th>Number of visits</th>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.redirectUrl %></td>
            <td>http://localhost:8001/url/<%= url.shortID %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
